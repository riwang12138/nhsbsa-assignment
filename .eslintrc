{
  "extends": "airbnb",
  "env": {
    "node":true,
    "es6": true,
    "jest": true
  },
  "rules": {
    // disable requiring trailing commas
    "comma-dangle": 0,
    "max-len": ["error", {"code": 120, "ignoreComments": true, "ignoreUrls": true, "ignoreStrings": true}],
    "no-unused-vars": ["error", { "argsIgnorePattern": "next" }],
    "no-console": "off"

  },
  "settings": {
    "react": {
      "version": "latest"
    }
  }
}
